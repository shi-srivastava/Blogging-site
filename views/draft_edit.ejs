<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>draft edit</title>

 
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
      
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
      <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
      <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
       <style>
         .note-group-select-from-files {
        display: none;
      }
       </style>
     
</head>
<body>
  <div style="text-align:center;">
    <h1>Hell Wolrd</h1>
    <input type="text" value="<%= blog._id %>" name="id">
    <input type="text" id="title" name="title" value="<%= blog.title %>" required>
  </div>
    <textarea name="editor" id="editor" required>
      <%- blog.body %>
    </textarea>
    <button id="ads">Add your Ad-script</button>
    <div id="ads-textarea" style="display:none;"><textarea placeholder="to be worked on"></textarea></div><br>
    <button id="save" >Save as draft</button>
    <button id="post" >Post</button>
  
    <script>
        let id = $("input[name='id']").val()
  $("#ads").on("click",()=>{
    $("#ads-textarea").toggle()
  })
  $("#save").on("click",()=>{
    let blog = $("#editor").val()
    let title = $("#title").val()
    
    $.ajax({
      url:"/draft-edit",
      method:"POST",
      data:{blog:blog,title:title,id:id},
      success:function(req){
      
      }
  
    })
  })
  $("#post").on("click",()=>{
    let blog = $("#editor").val()
    let title = $("#title").val()
    $.ajax({
      url:"/post-draft",
      method:"POST",
      data:{blog:blog,title:title,id:id},
      success:function(req){
        alert("done")
      }
  
    })
  })
      $('#editor').summernote({
       
        toolbar: [
          ['misc',['undo','redo']],
          ['style', ['bold', 'italic', 'underline', 'clear']],
      ['font', ['strikethrough', 'superscript', 'subscript']],
      ['insert',['link','video','table','picture']],
     
      ['para', ['ul', 'ol', 'paragraph']],
      
    ],
        hint: {
      mentions: ['jayden', 'sam', 'alvin', 'david'],
      match: /\B@(\w*)$/,
      search: function (keyword, callback) {
        callback($.grep(this.mentions, function (item) {
          return item.indexOf(keyword) == 0;
        }));
      },
      content: function (item) {
        let p = document.createElement('p')
        p.style.color = "#4747d1"
        p.innerHTML = item
        return p;
      }    
    }
      });
  </script>
</body>
</html>