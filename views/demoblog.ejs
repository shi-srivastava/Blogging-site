  }
  const email = "<%= email %>"
  alert(flag)
  $.ajax({
      url:"/blog-like",
      method:"POST",
      data:{id:btn.id,email:email,flag:flag,value:value},
      success:function(response){
          alert(response)
      }
  })
   
}
