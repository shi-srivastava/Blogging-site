        })
        return false
    }
    
  let btn = document.getElementsByClassName("reply")
  for(let i=0;i<btn.length;i++){
      btn[i].addEventListener("click",()=>{
          
          $("#"+btn[i].id+"d").toggle()
      })
  }
  const post_reply = (form)=>{
